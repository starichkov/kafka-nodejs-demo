{
  "name": "kafka-nodejs-demo",
  "version": "1.0.0",
  "description": "Simple Kafka producer and consumer with tests",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start:producer": "node src/producer.js",
    "start:consumer": "node src/consumer.js",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand --detectOpenHandles --forceExit",
    "test:coverage": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand --detectOpenHandles --forceExit --coverage"
  },
  "keywords": [
    "kafka",
    "kafkajs",
    "producer",
    "consumer"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "kafkajs": "^2.2.4"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@testcontainers/kafka": "^11.11.0",
    "jest": "^30.2.0",
    "testcontainers": "^11.11.0"
  },
  "jest": {
    "testEnvironment": "node",
    "globalSetup": "./jest-global-setup.js",
    "globalTeardown": "./jest-global-teardown.js",
    "maxWorkers": 1,
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true,
    "coverageProvider": "v8",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  }
}
